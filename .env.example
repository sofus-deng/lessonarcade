# Google AI Studio API Key for Gemini
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Basic Authentication for Lesson Studio
# These credentials protect the Studio interface and API endpoints
STUDIO_BASIC_AUTH_USER=
STUDIO_BASIC_AUTH_PASS=

# Salt for IP hashing in structured logs
# Use a random string to secure the hash
LOGGING_SALT=

# ElevenLabs API Configuration
# Get your key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=

# Default voice IDs for different languages
# Find voice IDs at: https://elevenlabs.io/app/voice-library
ELEVENLABS_VOICE_ID_EN=Adam
ELEVENLABS_VOICE_ID_ZH=Zhao

# Optional: Custom model ID (defaults to eleven_multilingual_v2)
# ELEVENLABS_MODEL_ID=eleven_multilingual_v2